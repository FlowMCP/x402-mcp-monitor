{
    "name": "x402-mcp-monitor",
    "version": "0.1.0",
    "description": "Monitors x402-capable MCP servers across MCP Registry, ERC-8004, and Coinbase Bazaar.",
    "main": "./src/index.mjs",
    "type": "module",
    "scripts": {
        "collect": "node src/index.mjs",
        "precompute": "node scripts/precompute.mjs",
        "import-dune": "node scripts/import-dune.mjs",
        "test": "NODE_OPTIONS='--experimental-vm-modules' npx jest --detectOpenHandles",
        "test:coverage:src": "NODE_OPTIONS='--experimental-vm-modules' npx jest --detectOpenHandles --coverage --collectCoverageFrom='src/**/*.mjs'",
        "test:file": "NODE_OPTIONS='--experimental-vm-modules' npx jest --detectOpenHandles",
        "serve": "node src/server/Server.mjs"
    },
    "dependencies": {
        "erc8004-registry-parser": "github:FlowMCP/erc8004-registry-parser#main",
        "x402-mcp-validator": "github:FlowMCP/x402-mcp-validator#main",
        "a2a-agent-validator": "github:FlowMCP/a2a-agent-validator#main"
    },
    "devDependencies": {
        "jest": "^30.0.5"
    },
    "keywords": [
        "x402",
        "mcp",
        "monitor",
        "erc8004",
        "a2a",
        "coinbase-bazaar"
    ],
    "license": "MIT"
}
